                        </div>
                    </div>
                </div>

                {{#if isLoggedIn}}


                {{else}}
                <div class="grid-content col">
                    <a class="black" id="register" href="/registration">Register Account</a>
                </div>
                {{/if}}



                <div class="grid-content col">
                    <a class="black" id="postvideo" href="/postvideo">Post A Video</a>
                </div>



                {{#if isLoggedIn}}
                <div class="grid-content col">
                    {{!-- <a class="black" id="login" href="/login">Logout</a> --}}
                    <form action="/users/logout" method="post">
                        <button type="submit" class="btn btn-danger"
                            onclick="window.location.href = '/login';">Logout</button>
                    </form>


                    {{!-- <form action="/users/profile" method="post">
                        <button type="submit" class="btn btn-primary"
                            onclick="window.location.href = '/profile';">Profile</button>
                    </form> --}}
                </div>

                {{else}}
                <div class="grid-content col">
                    {{!-- <a class="black" id="login" href="/login">Login</a> --}}
                    <button type="button" class="btn btn-primary"
                        onclick="window.location.href = '/login';">Login</button>
                </div>
                {{/if}}
            </div>
        </nav>
    </div>
</head>

<script>
    var searchButton = document.getElementById('search-button');
    if (searchButton) {
        searchButton.addEventListener('click', function (ev) {
            var searchText = document.getElementById('search-text').value;
            if (!searchText) return;
            const searchUrl = `/posts/search?key=${searchText}`
            fetch(searchUrl)
                .then((resp) => resp.json())
                .then((data) => {
                    console.log(data);
                })
        });
    }
</script>