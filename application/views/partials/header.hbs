        <nav class="grid-container container">
            <div class="row">

                <div class="grid-content col">
                    <a class="black" id="home" href="/">
                        <h1 class="icons"> <i class="fa-solid fa-plane"></i> Flight</h1>
                    </a>
                </div>

                {{!-- <div class="grid-content col">
                    <a class="black" id="home" href="/">Home</a>
                </div> --}}

                <div class="grid-content col">
                    <div class="input-group">
                        <div class="form-outline">
                            <form class="search-bar input-group" action="/posts/search" method="get">
                                <input type="search" id="search-text" class="search-text form-control" type="text"
